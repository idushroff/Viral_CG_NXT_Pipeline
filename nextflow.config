// nextflow.config

process {
    executor = 'local'  // Change to 'slurm', 'pbs', etc. if on an HPC cluster
    cpus = 8
    memory = '16 GB'
    // If you want to specify a default container for all processes, do it here:
    // container = 'biocontainers/samtools:v1.16.1_cv1'
}

docker {
    enabled = true  // Optional, leave if you want Docker enabled globally
}
